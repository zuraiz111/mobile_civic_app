{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/components/*": [
        "app/components/*"
      ],
      "@/screens/*": [
        "./src/screens/*"
      ],
      "@/data/*": [
        "./src/data/*"
      ],
      "@/context/*": [
        "./src/context/*"
      ]
    }
  },
  "include": [
    "**/*.js",
    "**/*.jsx",
    "app",
    "src"
  ]
}
