rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is department user
    function isDepartmentUser() {
      return request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'departmentUser';
    }

    // Helper function to check if user is citizen
    function isCitizen() {
      return request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'citizen';
    }

    // Users Collection
    match /users/{userId} {
      // Admin can read/write all users (to manage dept users)
      // Users can read/write their own profile
      allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin());
      // Admin can create users (for department users)
      allow create: if isAdmin() || request.auth.uid == userId;
    }

    // Departments Collection
    match /departments/{deptId} {
      // Admin can manage departments
      allow write: if isAdmin();
      // Everyone can read departments (citizens need to select one, dept users need to see them)
      allow read: if request.auth != null;
    }

    // Reports Collection
    match /reports/{reportId} {
      // Admin: Full access
      allow read, write: if isAdmin();

      // Citizen: 
      // - Create report
      // - Read own reports
      allow create: if request.auth != null; // Citizen creates report
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;

      // Department User:
      // - Read assigned reports
      // - Update status of assigned reports
      allow read: if isDepartmentUser() && resource.data.assignedTo == request.auth.uid;
      allow update: if isDepartmentUser() && resource.data.assignedTo == request.auth.uid 
                    && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'updatedAt']);
    }
  }
}
